program lab2;

{$APPTYPE CONSOLE}

uses
  SysUtils;

var
  i: integer;
  mult: integer;
begin

  if (ParamCount = 0) or ((ParamCount = 1) and (ParamStr(1)= '/?')) then
  begin
    Writeln('mult x1 x2 x3 ... xn = x1*x2*x3*...*xn');
  end
  else
  begin
    sum := 0;
    for i := 1 to ParamCount do
    begin
      try
        sum:= sum + StrToInt(ParamStr(i));
      except
        Writeln(ParamStr(i), ' is not a valid integer value');
      end;
    end;
    Writeln('sum = ', sum);
  end;
    
end.

