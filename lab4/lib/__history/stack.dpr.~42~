library stack;

uses
  SysUtils, Classes, Windows;

{$R *.res}

type
  TNodePointer = ^TNode;
  TNode = record
    value: integer;
    next: TNodePointer;
  end;

var
  head: TNodePointer;

function empty: boolean;
begin
  result := (head = nil);
end;

procedure push(value: integer);
var
  newHead: TNodePointer;
begin
  New(newHead);
  newHead^.value := value;
  newHead^.next := head;
  head := newHead;
end;

function top: integer;
begin
  result:= 0;
  if not empty then
  begin
    result := head^.value;
  end
end;

function pop: integer;
var
  temp: TNodePointer;
begin
  result:= 0;
  if not empty then
  begin
    result := head^.value;
    temp := head;
    head := head^.next;
    Dispose(temp);
  end
end;

procedure clear;
begin
  while not empty do
  begin
    pop;
  end;
  head:= nil;
end;

function count: integer;
var
  count: integer;
  walker: TNodePointer;
begin
  count := 0;
  walker := head;
  while not (walker = nil) do
  begin
    count := count + 1;
    walker := walker^.next;
  end;
  result := count;
end;

procedure ThisDLLProc(Reason: integer);
begin
  if Reason = DLL_PROCESS_DETACH then
  begin
    clear;
  end;
end;

exports
  empty,
  push,
  top,
  pop,
  clear
  count;

begin
  DLLProc := @ThisDLLProc;
end.
